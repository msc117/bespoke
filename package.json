{
  "name": "bespoke",
  "version": "1.0.0",
  "description": "",
  "main": "build/main.js",
  "scripts": {
    "clean": "rimraf build/app build/*.js",
    "build": "npm run clean && mkdirp build/app && tsc --outDir build/app --module es6 && npm run build:dev && npm run build:prd",
    "build:dev": "cross-env NODE_ENV=development babel-node --presets es2015 config/rollup.config.js",
    "build:prd": "cross-env NODE_ENV=production babel-node --presets es2015 config/rollup.config.js",
    "watch:dev": "nodemon -w src/main/webapp/ -x \"npm run build:dev\"",
    "watch:prd": "nodemon -w src/main/webapp/ -x \"npm run build:prd\"",
    "lint": "tslint src/main/webapp/js/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msc117/bespoke.git"
  },
  "author": "msantos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/msc117/bespoke/issues"
  },
  "homepage": "https://bespokebyana.com",
  "private": true,
  "pre-commit": [
    "lint",
    "test",
    "build"
  ],
  "devDependencies": {
    "@types/node": "^7.0.10",
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "cross-env": "^3.2.4",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-flexbugs-fixes": "^2.1.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-filesize": "^1.2.1",
    "rollup-plugin-hash": "^1.2.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-uglify": "^1.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "yarn": "^0.21.3"
  }
}
